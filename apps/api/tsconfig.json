{
  "extends": "../../packages/config/tsconfig.base.json",
  "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "verbatimModuleSyntax": true,
      "noEmit": true
    },
    "ts-node": {
      "esm": true,
      "transpileOnly": true
    }
}
