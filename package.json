{
  "name": "hashless-rebuild",
  "private": true,
  "scripts": {
    "dev:web": "pnpm --filter @app/web dev",
    "dev:api": "pnpm --filter @app/api dev",
    "dev:worker": "pnpm --filter @app/worker dev",
    "dev:all": "concurrently -n web,api,worker -c blue,green,magenta \"pnpm dev:web\" \"pnpm dev:api\" \"pnpm dev:worker\"",
    "db:up": "docker compose -f infra/compose.yml up -d",
    "db:down": "docker compose -f infra/compose.yml down -v",
    "prisma:push": "pnpm --filter @app/api prisma db push",
    "typecheck": "tsc -b"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "typescript": "^5.5.0"
  }
}